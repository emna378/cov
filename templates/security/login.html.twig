{% extends 'base.html.twig' %}

{% block title %}Connexion - Ecodrive{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-container {
            background: linear-gradient(135deg, #1a8c4e 0%, #2ecc71 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .login-box {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 400px;
        }
        
        .login-logo {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .login-logo i {
            color: #1a8c4e;
            font-size: 48px;
            margin-bottom: 15px;
        }
        
        .login-logo h1 {
            color: #1a8c4e;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 5px;
        }
        
        .login-logo p {
            color: #666;
            font-size: 14px;
        }
        
        .form-label {
            color: #333;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 14px;
        }
        
        .form-control {
            border: 2px solid #e0f2e9;
            border-radius: 8px;
            padding: 12px 15px;
            font-size: 15px;
            transition: all 0.3s;
        }
        
        .form-control:focus {
            border-color: #1a8c4e;
            box-shadow: 0 0 0 0.2rem rgba(26, 140, 78, 0.25);
        }
        
        .btn-ecodrive {
            background: linear-gradient(135deg, #1a8c4e 0%, #2ecc71 100%);
            border: none;
            color: white;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 16px;
            width: 100%;
            transition: all 0.3s;
            margin-top: 10px;
        }
        
        .btn-ecodrive:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(26, 140, 78, 0.3);
        }
        
        .login-footer {
            text-align: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }
        
        .login-footer a {
            color: #1a8c4e;
            text-decoration: none;
            font-weight: 500;
        }
        
        .login-footer a:hover {
            text-decoration: underline;
        }
        
        .alert-danger {
            background: #ffeaea;
            border: 1px solid #ffcccc;
            border-left: 4px solid #ff3333;
            color: #cc0000;
            border-radius: 8px;
            padding: 12px 15px;
            margin-bottom: 20px;
        }
        
        .form-check-input:checked {
            background-color: #1a8c4e;
            border-color: #1a8c4e;
        }
        
        .form-check-label {
            font-size: 14px;
            color: #555;
        }
        
        /* Animation pour la feuille */
        @keyframes leafFloat {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-5px); }
            100% { transform: translateY(0px); }
        }
        
        .fa-leaf {
            animation: leafFloat 3s ease-in-out infinite;
        }
    </style>
{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-box">
        <div class="login-logo">
            <i class="fas fa-leaf"></i>
            <h1>Ecodrive</h1>
            <p>Conduisez vert, économisez l'énergie</p>
        </div>
        
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" 
                       class="form-control" placeholder="votre@email.com" 
                       autocomplete="email" required autofocus>
            </div>
            
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" 
                       class="form-control" placeholder="Votre mot de passe" 
                       autocomplete="current-password" required>
            </div>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
            </div>
            
            <button class="btn btn-ecodrive" type="submit">
                <i class="fas fa-sign-in-alt me-2"></i>Se connecter
            </button>
        </form>
        
        <div class="login-footer">
            <p class="mb-2">Nouveau sur Ecodrive ?</p>
            <a href="#" class="d-block mb-2">
                <i class="fas fa-user-plus me-1"></i>Créer un compte chauffeur
            </a>
            <a href="#">
                <i class="fas fa-key me-1"></i>Mot de passe oublié ?
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Ajouter FontAwesome si ce n'est pas déjà fait
        if (!document.querySelector('link[href*="font-awesome"]')) {
            const link = document.createElement('link');
            link.rel = 'stylesheet';
            link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css';
            document.head.appendChild(link);
        }
        
        // Permettre la soumission avec la touche Entrée
        document.getElementById('inputPassword').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                document.querySelector('form').submit();
            }
        });
    </script>
{% endblock %}
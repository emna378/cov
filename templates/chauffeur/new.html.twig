{% extends 'base.html.twig' %}

{% block title %}Ajouter Chauffeur - Ecodrive{% endblock %}

{% block stylesheets %}
<style>
    .form-container {
        background: #f5f7fa;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .form-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 40px;
        width: 100%;
        max-width: 600px;
    }

    .form-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .form-title {
        color: #1a8c4e;
        font-size: 28px;
        font-weight: 700;
    }

    .form-subtitle {
        color: #666;
        font-size: 16px;
        margin-bottom: 25px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 20px;
        width: 100%;
    }

    .form-group label {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 60%;
        min-width: 200px;
        padding: 12px 15px;
        border: 2px solid #e0f2e9;
        border-radius: 8px;
        font-size: 15px;
        transition: all 0.3s;
        background: #f8fdfa;
        text-align: center;
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
        border-color: #1a8c4e;
        box-shadow: 0 0 0 3px rgba(26, 140, 78, 0.1);
        background: white;
        outline: none;
    }

    .btn-success {
        background: linear-gradient(135deg, #1a8c4e 0%, #2ecc71 100%);
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        border: none;
        transition: all 0.3s;
        min-width: 200px;
        text-align: center;
        margin-top: 15px;
        display: inline-block;
    }

    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(26, 140, 78, 0.3);
    }

    .btn-secondary {
        background: #6c757d;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        border: none;
        transition: all 0.3s;
        min-width: 200px;
        display: inline-block;
        margin-top: 15px;
    }

    .btn-secondary:hover {
        background: #5a6268;
        transform: translateY(-2px);
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 20px;
    }

    @media (max-width: 576px) {
        .form-group input,
        .form-group select,
        .form-group textarea,
        .btn-success,
        .btn-secondary {
            width: 100%;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="form-container">
    <div class="form-card">
        <div class="form-header">
            <h1 class="form-title">Ajouter Chauffeur</h1>
            <p class="form-subtitle">Remplissez les informations pour créer un nouveau chauffeur</p>
        </div>

        <form method="post" action="">
            {% for field in form %}
                <div class="form-group">
                    {{ form_label(field) }}
                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(field) }}
                </div>
            {% endfor %}

            <div class="action-buttons">
                <button type="submit" class="btn-success">Créer</button>
                <button type="button" class="btn-secondary" onclick="history.back()">Annuler</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}

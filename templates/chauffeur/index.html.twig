{% extends 'base.html.twig' %}

{% block title %}Chauffeur index{% endblock %}

{% block body %}
    <h1>Chauffeur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Name</th>
                <th>Age</th>
                <th>Cin</th>
                <th>Permi</th>
                <th>Photo</th>
                <th>Phone</th>
                <th>Status</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chauffeur in chauffeurs %}
            <tr>
                <td>{{ chauffeur.id }}</td>
                <td>{{ chauffeur.email }}</td>
                <td>{{ chauffeur.roles ? chauffeur.roles|json_encode : '' }}</td>
                <td>{{ chauffeur.password }}</td>
                <td>{{ chauffeur.name }}</td>
                <td>{{ chauffeur.age }}</td>
                <td>{{ chauffeur.cin }}</td>
                <td>{{ chauffeur.permi }}</td>
                <td>{{ chauffeur.photo }}</td>
                <td>{{ chauffeur.phone }}</td>
                <td>{{ chauffeur.status }}</td>
                <td>{{ chauffeur.role }}</td>
                <td>
                    <a href="{{ path('app_chauffeur_show', {'id': chauffeur.id}) }}">show</a>
                    <a href="{{ path('app_chauffeur_edit', {'id': chauffeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chauffeur_new') }}">Create new</a>
{% endblock %}

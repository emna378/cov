{% extends 'base.html.twig' %}

{% block title %}Dashboard Chauffeur - Ecodrive{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background: #f5f7fa;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        
        .dashboard-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .dashboard-header {
            background: linear-gradient(135deg, #1a8c4e 0%, #2ecc71 100%);
            border-radius: 15px;
            color: white;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(26, 140, 78, 0.2);
        }
        
        .greeting {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 10px;
        }
        
        .welcome-text {
            font-size: 18px;
            opacity: 0.9;
            margin-bottom: 20px;
        }
        
        .info-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
        }
        
        .section-title {
            color: #1a8c4e;
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #e0f2e9;
        }
        
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }
        
        .info-item {
            display: flex;
            align-items: center;
            padding: 15px;
            background: #f8fdfa;
            border-radius: 8px;
            border-left: 4px solid #1a8c4e;
        }
        
        .info-icon {
            background: #e0f2e9;
            width: 40px;
            height: 40px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            color: #1a8c4e;
            font-size: 18px;
        }
        
        .info-content h4 {
            margin: 0;
            font-size: 14px;
            color: #666;
            font-weight: 500;
        }
        
        .info-content p {
            margin: 5px 0 0;
            font-size: 16px;
            font-weight: 600;
            color: #333;
        }
        
        .table-container {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
            margin-bottom: 30px;
        }
        
        .table {
            margin: 0;
            border-collapse: separate;
            border-spacing: 0;
        }
        
        .table thead th {
            background: #f8fdfa;
            border: none;
            color: #1a8c4e;
            font-weight: 600;
            padding: 15px;
            border-bottom: 2px solid #e0f2e9;
        }
        
        .table tbody td {
            padding: 15px;
            border-bottom: 1px solid #f0f0f0;
            vertical-align: middle;
        }
        
        .table tbody tr:hover {
            background: #f8fdfa;
        }
        
        .btn {
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 500;
            font-size: 14px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
        }
        
        .btn-primary {
            background: #1a8c4e;
            color: white;
        }
        
        .btn-primary:hover {
            background: #167c3e;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(26, 140, 78, 0.2);
        }
        
        .btn-warning {
            background: #f39c12;
            color: white;
        }
        
        .btn-warning:hover {
            background: #e67e22;
            color: white;
            transform: translateY(-2px);
        }
        
        .btn-success {
            background: #2ecc71;
            color: white;
        }
        
        .btn-success:hover {
            background: #27ae60;
            color: white;
            transform: translateY(-2px);
        }
        
        .btn-danger {
            background: #e74c3c;
            color: white;
        }
        
        .btn-danger:hover {
            background: #c0392b;
            color: white;
            transform: translateY(-2px);
        }
        
        .action-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 30px;
            margin-bottom: 40px;
        }
        
        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
        }
        
        .status-active {
            background: #d5f4e6;
            color: #1a8c4e;
        }
        
        .status-pending {
            background: #fff3cd;
            color: #856404;
        }
        
        .status-cancelled {
            background: #f8d7da;
            color: #721c24;
        }
        
        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #666;
        }
        
        .empty-state i {
            font-size: 48px;
            color: #e0e0e0;
            margin-bottom: 15px;
        }
        
        .dashboard-footer {
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #eaeaea;
            color: #666;
            font-size: 14px;
        }
        
        @media (max-width: 768px) {
            .dashboard-container {
                padding: 15px;
            }
            
            .dashboard-header {
                padding: 20px;
            }
            
            .greeting {
                font-size: 24px;
            }
            
            .info-grid {
                grid-template-columns: 1fr;
            }
            
            .table-responsive {
                overflow-x: auto;
            }
            
            .action-buttons {
                flex-direction: column;
            }
            
            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
        <div class="greeting">Bonjour, {{ chauffeur.name }}</div>
        <div class="welcome-text">Bienvenue sur votre dashboard Ecodrive</div>
    </div>

    <!-- Informations personnelles -->
    <div class="info-card">
        <h2 class="section-title">
            <i class="fas fa-user-circle me-2"></i>Mes informations
        </h2>
        
        <div class="info-grid">
            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="info-content">
                    <h4>Email</h4>
                    <p>{{ chauffeur.email }}</p>
                </div>
            </div>
            
            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-phone"></i>
                </div>
                <div class="info-content">
                    <h4>Téléphone</h4>
                    <p>{{ chauffeur.phone }}</p>
                </div>
            </div>
            
            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-id-card"></i>
                </div>
                <div class="info-content">
                    <h4>Permis</h4>
                    <p>{{ chauffeur.permi }}</p>
                </div>
            </div>
            
            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-passport"></i>
                </div>
                <div class="info-content">
                    <h4>CIN</h4>
                    <p>{{ chauffeur.cin }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Trajets -->
    <div class="table-container">
        <div class="section-title" style="padding: 20px 25px 0 25px;">
            <i class="fas fa-route me-2"></i>Mes Trajets
        </div>
        
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Départ</th>
                        <th>Destination</th>
                        <th>Date & Heure</th>
                        <th>Prix</th>
                        <th>Places</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for trajet in trajets %}
                        <tr>
                            <td>{{ trajet.depart }}</td>
                            <td>{{ trajet.destination }}</td>
                            <td>{{ trajet.dHDepart ? trajet.dHDepart|date('d/m/Y H:i') : '' }}</td>
                            <td><strong>{{ trajet.prix }} DT</strong></td>
                            <td>{{ trajet.placeDispo }}</td>
                            <td>
                                <span class="status-badge {{ trajet.status ? 'status-active' : 'status-pending' }}">
                                    {{ trajet.status ?: 'En attente' }}
                                </span>
                            </td>
                            <td>
                                <a href="{{ path('app_trajet_delete', {'id': trajet.id}) }}" class="btn btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                               
                                <a href="{{ path('app_trajet_edit', {'id': trajet.id}) }}" class="btn btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">
                                <div class="empty-state">
                                    <i class="fas fa-route"></i>
                                    <p>Aucun trajet trouvé pour le moment.</p>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Voitures -->
    <div class="table-container">
        <div class="section-title" style="padding: 20px 25px 0 25px;">
            <i class="fas fa-car me-2"></i>Mes Voitures
        </div>
        
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Modèle</th>
                        <th>Immatriculation</th>
                        <th>Couleur</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if voitures|length > 0 %}
                        {% for voiture in voitures %}
                            <tr>
                                <td>{{ voiture.model }}</td>
                                <td><strong>{{ voiture.immatriculation }}</strong></td>
                                <td>
                                    <span style="display: inline-flex; align-items: center; gap: 5px;">
                                        <span style="width: 15px; height: 15px; background-color: {{ voiture.color }}; border-radius: 3px;"></span>
                                        {{ voiture.color }}
                                    </span>
                                </td>
                                <td>
                                    
                                    <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}" class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('app_voiture_delete', {'id': voiture.id}) }}" class="btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="4">
                                <div class="empty-state">
                                    <i class="fas fa-car"></i>
                                    <p>Vous n'avez aucune voiture ajoutée.</p>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="action-buttons">
        <a href="{{ path('app_chauffeur_edit', {'id': chauffeur.id}) }}" class="btn btn-success">
            <i class="fas fa-user-edit me-2"></i>Modifier mon profil
        </a>
        <a href="/trajet/new" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>Ajouter un trajet
        </a>
        <a href="/voiture/new" class="btn btn-success">
            <i class="fas fa-car me-2"></i>Ajouter une voiture
        </a>
        <a href="/chauffeur" class="btn btn-danger">
            <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
        </a>
    </div>

    <div class="dashboard-footer">
        <p>© 2026 Ecodrive - Plateforme de covoiturage écologique</p>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    // Ajouter FontAwesome si ce n'est pas déjà fait
    if (!document.querySelector('link[href*="font-awesome"]')) {
        const link = document.createElement('link');
        link.rel = 'stylesheet';
        link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css';
        document.head.appendChild(link);
    }
    
    // Animation au chargement
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.info-card, .table-container');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, index * 100);
        });
    });
</script>
{% endblock %}
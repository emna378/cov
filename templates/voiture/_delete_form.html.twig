{# templates/voiture/_delete_form.html.twig #}

<div class="delete-container">
    <form method="post" action="{{ path('app_voiture_delete', {'id': voiture.id}) }}" 
          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette voiture ?');">

        {# CSRF token #}
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ voiture.id) }}">

        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt me-2"></i>Supprimer la voiture
        </button>
    </form>
</div>

<style>
    .delete-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .btn-danger {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        border: none;
        transition: all 0.3s;
        min-width: 200px;
        text-align: center;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(231, 76, 60, 0.35);
    }

    @media (max-width: 576px) {
        .btn-danger {
            width: 100%;
        }
    }
</style>
